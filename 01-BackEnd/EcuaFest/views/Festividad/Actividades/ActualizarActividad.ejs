<h1>Usted esta editando a:
  <%= Actividades.nombreActivity %>
</h1>

<form action="Actividad/editarActividades" method="post">


  <input hidden
         class="form-control"
         type="text"
         id="id"
         name="id"
         value="<%= Actividades.id %>">


  <div class="form-group row">
    <label for="nombreActivity" class="col-2 col-form-label">Nombre Festividad</label>
    <div class="col-10">
      <input class="form-control"
             type="text"
             placeholder="Ingrese nombre Festividad"
             id="nombreActivity"
             name="nombreActivity"
             value="<%= Actividades.nombreActivity %>"

      >
    </div>
  </div>

  <div class="form-group row">
    <label for="direccionActivity" class="col-2 col-form-label">Lugar Festividad</label>
    <div class="col-10">
      <input class="form-control" type="text"
             placeholder="Ingrese sus Apellidos"
             name="direccionActivity"
             id="direccionActivity"
             value="<%= Actividades.direccionActivity %>"
      >
    </div>
  </div>

  <div class="form-group row">
    <label for="descripcionActivity" class="col-2 col-form-label">Mes de Festividad</label>
    <div class="col-10">
      <input class="form-control" type="text" placeholder="Ingrese su correo" id="descripcionActivity"
             name="descripcionActivity"
             value="<%= Actividades.descripcionActivity %>">
    </div>
  </div>

  <button
    class="btn btn-outline-success">Editar</button>


</form>
