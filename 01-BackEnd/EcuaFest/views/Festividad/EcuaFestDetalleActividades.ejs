<%-partial ('header2.ejs')%>
<br>
<br>
<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <h1>Actividades</h1>
    <br>
    <br>
    <a href="/crearActividad">
      <button type="button"  class="btn btn-primary">Crear Actividad</button>
    </a></div>
  <div class="col-md-4"></div>
</div>

<br>
<br>

<div class="container">
  <div id="contenedor" class="row">
    <% for(var i=0; i<Actividades.length; i++) {%>
    <div class="col-sm-4">
      <div class="card" style="width: 20rem;">
        <img class="card-img-top" src="<%=Actividades[i].imagenActivity%>" alt="">
        <div class="card-block">

          <h4 class="card-title"><%= Actividades[i].nombreActivity %></h4>
          <p class="card-text">Lugar :
            <%= Actividades[i].direccionActivity %>
          </p>
          <p class="card-text">Descripcion :
            <%= Actividades[i].descripcionActivity %>
          </p>
          <p class="card-text">Fecha :
            <%= Actividades[i].fechaActivity %>
          </p>

        </div>


        <div class="row">

          <div class="col-md-12">
            <form action="/Actividad/eliminarActividad" method="post">
              <input hidden
                     type="text"
                     value="<%=Actividades[i].id%>"
                     name="id">
              <br>
              <!--boton borrar-->
              <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                  <button  type="submit" class="btn btn-warning">Borrar</button>
                </div>
                <div class="col-md-4"></div>
              </div>
              <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                  <a href="/editarGastronomia?id=<%= Actividades[i].id %>">
                    <button  type="button"  class="btn btn-success">Editar</button>
                  </a>
                </div>
                <div class="col-md-4"></div>
              </div>
              <br>
              <br>
            </form>
          </div>

        </div>




      </div>
      <br>
    </div>

    <% } %>
  </div>
</div>

